name: Build App (Cloud - Faster)

on:
  push:
    branches:
      - master

jobs:
  build:
    runs-on: ubuntu-latest
    # Cloud builds are much faster (5-10 min vs 25 min)
    # They run on EAS servers with optimized build environments

    steps:
      - name: ğŸ— Checkout repository
        uses: actions/checkout@v4

      - name: ğŸ— Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22.x
          cache: npm

      - name: ğŸ— Setup Expo and EAS
        uses: expo/expo-github-action@v7
        with:
          token: ${{ secrets.EXPO_TOKEN }}
          expo-version: latest
          eas-version: latest

      - name: ğŸ“¦ Install dependencies
        run: npm install

      - name: ğŸ‘· Build Android app (cloud)
        run: |
          npx eas-cli build \
            --non-interactive \
            --platform android \
            --profile preview \
            --no-wait

      # Cloud builds download automatically from EAS
      # You can also add a step to download the build if needed

